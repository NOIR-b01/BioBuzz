<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State for when the element is pressed -->
    <item android:state_pressed="true">
        <shape>
            <!-- Background color when pressed -->
            <solid android:color="@color/aqua_darker" />

            <!-- Rounded corners with 15sp radius -->
            <corners android:radius="15sp" />

            <!-- Border with color 'jet' and 4sp width -->
            <stroke android:color="@color/jet" android:width="4sp" />
        </shape>
    </item>

    <!-- Default state (when not pressed) -->
    <item>
        <shape>
            <!-- Background color in normal state -->
            <solid android:color="@color/aqua_dark" />

            <!-- Rounded corners with 15sp radius (same as pressed state) -->
            <corners android:radius="15sp" />

            <!-- Border with color 'jet' and 3sp width (slightly thinner than when pressed) -->
            <stroke android:color="@color/jet" android:width="3sp" />
        </shape>
    </item>
</selector>
